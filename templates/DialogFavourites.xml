<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<defaultcontrol always="true">450</defaultcontrol>
	<coordinates>
		<left>{{ScaleX('0')}}</left>
		<top>{{ScaleY('0')}}</top>
	</coordinates>
	<controls>
		<control type="group">
			<depth>DepthSideBlade</depth>
			<animation effect="slide" start="{{ScaleBorder2('400,0')}}" end="{{ScaleBorder2('0,0')}}" time="300" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="{{ScaleBorder2('0,0')}}" end="{{ScaleBorder2('400,0')}}" time="300" tween="quadratic" easing="out">WindowClose</animation>
			<control type="image">
				<left>{{ScaleX('{FavoritesBladeWidth}r')}}</left>
				<top>{{ScaleY('0')}}</top>
				<width>{{ScaleX({FavoritesBladeWidth})}}</width>
				<height>{{ScaleY('720')}}</height>
				<texture border="{{ScaleBorder('15,0,0,0')}}" flipx="true">HomeBladeSub.png</texture>
			</control>
			<control type="button">
				<description>Close Window button</description>
				<left>{{ScaleX('{{ {FavoritesBladeWidth} - 20 }}r')}}</left>
				<top>{{ScaleY('0')}}</top>
				<width>{{ScaleX('64')}}</width>
				<height>{{ScaleY('32')}}</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>450</onleft>
				<onright>450</onright>
				<onup>450</onup>
				<ondown>450</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			<control type="image">
				<left>{{ScaleX('{{ {FavoritesBladeWidth} - 30 }}r')}}</left>
				<top>{{ScaleY('30')}}</top>
				<width>{{ScaleX('200')}}</width>
				<height>{{ScaleY('200')}}</height>
				<aspectratio align="center">keep</aspectratio>
				<fadetime>IconCrossfadeTime</fadetime>
				<texture>$INFO[ListItem.Icon]</texture>
				<bordertexture border="{{ScaleBorder('8')}}">ThumbShadow.png</bordertexture>
				<bordersize>{{ScaleBorder('8')}}</bordersize>
			</control>
			<control type="list" id="450">
				<left>{{ScaleX('{{ {FavoritesBladeWidth} - 20 }}r')}}</left>
				<top>{{ScaleY('250')}}</top>
				<width>{{ScaleX({{ 50 + {FavoritesBladeWidth} }})}}</width>
				<height>{{ScaleY('380')}}</height>
				<onup>450</onup>
				<onleft>Dialog.Close(Favourites)</onleft>
				<onright>450</onright>
				<ondown>450</ondown>
				<pagecontrol>-</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="{{ScaleY('40')}}">
					<control type="image">
						<left>{{ScaleX('0')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX({{ -30 + {FavoritesBladeWidth} }})}}</width>
						<height>{{ScaleY('40')}}</height>
						<texture border="{{ScaleBorder('5')}}">button-nofocus.png</texture>
					</control>
					<control type="label">
						<left>{{ScaleX('10')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX({{ -50 + {FavoritesBladeWidth} }})}}</width>
						<height>{{ScaleY('40')}}</height>
						<font>font12_title</font>
						<align>left</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="{{ScaleY('40')}}">
					<control type="image">
						<left>{{ScaleX('0')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX({{ -30 + {FavoritesBladeWidth} }})}}</width>
						<height>{{ScaleY('40')}}</height>
						<visible>!Control.HasFocus(450)</visible>
						<texture border="{{ScaleBorder('3')}}">button-nofocus.png</texture>
					</control>
					<control type="image">
						<left>{{ScaleX('0')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX({{ -30 + {FavoritesBladeWidth} }})}}</width>
						<height>{{ScaleY('40')}}</height>
						<visible>Control.HasFocus(450)</visible>
						<texture border="{{ScaleBorder('3')}}">button-focus.png</texture>
					</control>
					<control type="label">
						<left>{{ScaleX('10')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX({{ -50 + {FavoritesBladeWidth} }})}}</width>
						<height>{{ScaleY('40')}}</height>
						<font>font12_title</font>
						<align>left</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
			</control>
			<control type="label">
				<description>Page label</description>
				<right>{{ScaleX('30')}}</right>
				<top>{{ScaleY('670')}}</top>
				<width>{{ScaleX({{ -50 + {FavoritesBladeWidth} }})}}</width>
				<height>{{ScaleY('30')}}</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>grey</textcolor>
				<label>([COLOR=blue]$INFO[Container(450).NumItems][/COLOR]) $LOCALIZE[31025] - $LOCALIZE[31024] ([COLOR=blue]$INFO[Container(450).CurrentPage]/$INFO[Container(450).NumPages][/COLOR])</label>
			</control>
		</control>
	</controls>
</window>
