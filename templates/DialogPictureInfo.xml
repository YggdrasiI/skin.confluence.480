<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">5</defaultcontrol>
	<coordinates>
		<left>{{ScaleX('240')}}</left>
		<top>{{ScaleY('45')}}</top>
	</coordinates>
	<include>dialogeffect</include>
	<controls>
		<control type="group">
			<control type="image">
				<description>background image</description>
				<left>{{ScaleX('0')}}</left>
				<top>{{ScaleY('0')}}</top>
				<width>{{ScaleX('800')}}</width>
				<height>{{ScaleY('630')}}</height>
				<texture border="{{ScaleBorder('40')}}">DialogBack.png</texture>
				<visible>!Window.IsVisible(Slideshow)</visible>
			</control>
			<control type="image">
				<description>background image</description>
				<left>{{ScaleX('0')}}</left>
				<top>{{ScaleY('0')}}</top>
				<width>{{ScaleX('800')}}</width>
				<height>{{ScaleY('630')}}</height>
				<texture border="{{ScaleBorder('40')}}">DialogBack2.png</texture>
				<visible>Window.IsVisible(Slideshow)</visible>
			</control>
			<control type="image">
				<description>Dialog Header image</description>
				<left>{{ScaleX('40')}}</left>
				<top>{{ScaleY('16')}}</top>
				<width>{{ScaleX('720')}}</width>
				<height>{{ScaleY('40')}}</height>
				<texture>dialogheader.png</texture>
			</control>
			<control type="label">
				<description>header label</description>
				<left>{{ScaleX('40')}}</left>
				<top>{{ScaleY('20')}}</top>
				<width>{{ScaleX('720')}}</width>
				<height>{{ScaleY('30')}}</height>
				<font>font13_title</font>
				<label>$LOCALIZE[13406]</label>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>selected</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="button">
				<description>Close Window button</description>
				<left>{{ScaleX('710')}}</left>
				<top>{{ScaleY('15')}}</top>
				<width>{{ScaleX('64')}}</width>
				<height>{{ScaleY('32')}}</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>2</onleft>
				<onright>2</onright>
				<onup>2</onup>
				<ondown>2</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			<control type="scrollbar" id="60">
				<left>{{ScaleX('755')}}</left>
				<top>{{ScaleY('70')}}</top>
				<width>{{ScaleX('25')}}</width>
				<height>{{ScaleY('495')}}</height>
				<texturesliderbackground border="{{ScaleBorder('0,14,0,14')}}">ScrollBarV.png</texturesliderbackground>
				<texturesliderbar border="{{ScaleBorder('0,14,0,14')}}">ScrollBarV_bar.png</texturesliderbar>
				<texturesliderbarfocus border="{{ScaleBorder('0,14,0,14')}}">ScrollBarV_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
				<onleft>5</onleft>
				<onright>5</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="list" id="5">
				<animation effect="slide" start="{{ScaleBorder2('0,0')}}" end="{{ScaleBorder2('10,0')}}" time="0" condition="!Control.IsVisible(60)">Conditional</animation>
				<left>{{ScaleX('30')}}</left>
				<top>{{ScaleY('70')}}</top>
				<width>{{ScaleX('720')}}</width>
				<height>{{ScaleY('495')}}</height>
				<onleft>60</onleft>
				<onright>60</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="{{ScaleY('45')}}">
					<control type="image">
						<left>{{ScaleX('0')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('720')}}</width>
						<height>{{ScaleY('40')}}</height>
						<texture border="{{ScaleBorder('5')}}">button-nofocus.png</texture>
					</control>
					<control type="label">
						<left>{{ScaleX('10')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('500')}}</width>
						<height>{{ScaleY('40')}}</height>
						<font>font13</font>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>{{ScaleX('60')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('650')}}</width>
						<height>{{ScaleY('40')}}</height>
						<font>font13</font>
						<aligny>center</aligny>
						<textcolor>grey2</textcolor>
						<shadowcolor>black</shadowcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<info>ListItem.Label2</info>
					</control>
				</itemlayout>
				<focusedlayout height="{{ScaleY('45')}}">
					<control type="image">
						<left>{{ScaleX('0')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('720')}}</width>
						<height>{{ScaleY('40')}}</height>
						<visible>!Control.HasFocus(5)</visible>
						<texture border="{{ScaleBorder('5')}}">button-nofocus.png</texture>
					</control>
					<control type="image">
						<left>{{ScaleX('0')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('720')}}</width>
						<height>{{ScaleY('40')}}</height>
						<texture border="{{ScaleBorder('5')}}">button-focus2.png</texture>
						<visible>Control.HasFocus(5)</visible>
					</control>
					<control type="label">
						<left>{{ScaleX('10')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('500')}}</width>
						<height>{{ScaleY('40')}}</height>
						<font>font13</font>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>{{ScaleX('60')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('650')}}</width>
						<height>{{ScaleY('40')}}</height>
						<font>font13</font>
						<aligny>center</aligny>
						<textcolor>grey2</textcolor>
						<shadowcolor>black</shadowcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<info>ListItem.Label2</info>
					</control>
				</focusedlayout>
			</control>
			<control type="label">
				<description>number of files/pages in list text label</description>
				<left>{{ScaleX('460')}}</left>
				<top>{{ScaleY('570')}}</top>
				<width>{{ScaleX('300')}}</width>
				<height>{{ScaleY('35')}}</height>
				<font>font12</font>
				<align>right</align>
				<aligny>center</aligny>
				<scroll>true</scroll>
				<textcolor>grey</textcolor>
				<label>([COLOR=blue]$INFO[Container(5).NumItems][/COLOR]) $LOCALIZE[31025] - $LOCALIZE[31024] ([COLOR=blue]$INFO[Container(5).CurrentPage]/$INFO[Container(5).NumPages][/COLOR])</label>
			</control>
		</control>
	</controls>
</window>
