<?xml version="1.0" encoding="UTF-8"?>
<window>
	<depth>DepthDialog+</depth>
	<defaultcontrol>11</defaultcontrol>
	<animation effect="slide" start="{{ScaleBorder2('0,-80')}}" end="{{ScaleBorder2('0,0')}}" time="75">WindowOpen</animation>
	<animation effect="slide" start="{{ScaleBorder2('0,0')}}" end="{{ScaleBorder2('0,-80')}}" time="75">WindowClose</animation>
	<coordinates>
		<left>{{ScaleX('405')}}</left>
		<top>{{ScaleY('0')}}</top>
	</coordinates>
	<controls>
		<control type="image">
			<left>{{ScaleX('0')}}</left>
			<top>{{ScaleY('-10')}}</top>
			<width>{{ScaleX('460')}}</width>
			<height>{{ScaleY('80')}}</height>
			<texture flipy="true" border="{{ScaleBorder('20,2,20,20')}}">InfoMessagePanel.png</texture>
		</control>
		<control type="label" id="10">
			<description>Dialog header</description>
			<left>{{ScaleX('20')}}</left>
			<top>{{ScaleY('10')}}</top>
			<width>{{ScaleX('230')}}</width>
			<height>{{ScaleY('20')}}</height>
			<align>left</align>
			<aligny>center</aligny>
			<font>font12_title</font>
			<textcolor>blue</textcolor>
		</control>
		<control type="label" id="12">
			<description>Slider Value</description>
			<left>{{ScaleX('220')}}</left>
			<top>{{ScaleY('10')}}</top>
			<width>{{ScaleX('220')}}</width>
			<height>{{ScaleY('20')}}</height>
			<align>right</align>
			<aligny>center</aligny>
			<font>font12_title</font>
			<textcolor>white</textcolor>
		</control>
		<control type="slider" id="11">
			<description>Slider</description>
			<left>{{ScaleX('20')}}</left>
			<top>{{ScaleY('35')}}</top>
			<width>{{ScaleX('420')}}</width>
			<height>{{ScaleY('20')}}</height>
			<aligny>center</aligny>
			<texturefocus/>
			<texturenofocus/>
			<texturesliderbar>osd_slider_bg_2.png</texturesliderbar>
			<textureslidernib>osd_slider_nibNF.png</textureslidernib>
			<textureslidernibfocus>osd_slider_nib.png</textureslidernibfocus>
			<onup>11</onup>
			<ondown>11</ondown>
			<onleft>11</onleft>
			<onright>11</onright>
		</control>
	</controls>
</window>
